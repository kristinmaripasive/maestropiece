<p id="notice"><%= notice %></p>

<div class="container">
  <div class="header-container">
    <p>
      <div id="wrapper"><div id="im"><img src='<%= @musician.photo_url %>'/></div></div>
    </p>

    <p>
      <div id="name">
      <%= @musician.name %>
      </div>
    </p>

    <p>
      <div id="description">
      <%= @musician.description %>
      </div>
    </p>

    <%= link_to 'Edit', edit_musician_path(@musician) %> |
    <%= link_to 'Back', musicians_path %>

    <div class="body-container">
      <p>
        <%= link_to "Add music piece(+)", new_musician_music_path(@musician) %>
      </p>
    </div>

    <!-- THESE ARE THE MUSIC PIECES -->
    <div class="list-container">
      <% @musician.musics.each do |music| %>
      <div class="music-list-header-container">
        <div id="piece-wrapper"><div id="im"><img src='<%= music.photo_url %>'/></div></div>
        <div id="name"><%= music.name %></div>
        <div id="description"><%= music.description %></div>
        <%= link_to 'Show', musician_music_path(@musician, music) %>
        <%= link_to 'Edit', edit_musician_music_path(@musician, music) %>
        <%= link_to 'Destroy', musician_music_path(@musician, music), method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <% end %>
    </div>

  </div>
</div>
