<p id="notice"><%= notice %></p>

<h1>Arts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Photo url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= art.name %></td>
        <td><%= art.description %></td>
        <td><%= art.photo_url %></td>
        <td><%= link_to 'Show', artist_arts_path(@artist, @art) %></td>
        <td><%= link_to 'Edit', edit_artist_art_path(@artist, @art) %></td>
        <td><%= link_to 'Destroy', artist_art_path(@artist, @art) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

